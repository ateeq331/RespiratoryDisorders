<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/forgot"
    android:padding="16dp"
    android:background="#00293A">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respiratory Disorders"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#00B4FF"  />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#006088"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We try to keep you"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#FFFF" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Healthy"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#00293A" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets Start"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00B4FF"
        android:foregroundTint="@color/white"
        android:layout_margin="108dp"
        android:textAllCaps="false"
        android:textSize="16sp"  />

</LinearLayout>
